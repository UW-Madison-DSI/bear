{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "docs-serve",
			"type": "shell",
			"command": "uv run mkdocs serve --dev-addr=0.0.0.0:8001",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "docs-build",
			"type": "shell",
			"command": "uv run mkdocs build",
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "docs-deploy",
			"type": "shell",
			"command": "uv run mkdocs gh-deploy",
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		}
	]
}